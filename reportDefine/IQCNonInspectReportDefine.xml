<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE report PUBLIC "-//JFreeReport//DTD report definition//EN//simple/version 0.8.5"
                        "http://jfreereport.sourceforge.net/report-085.dtd">

<report name="ReportProperty Demo" pageformat="A4" 
    rightmargin="25" topmargin="20" bottommargin="10" leftmargin="25" orientation="landscape">

  <configuration>
    <property name="org.jfree.report.modules.output.pageable.pdf.Encoding">Identity-H</property> 
    <property name="org.jfree.report.modules.output.pageable.pdf.EmbedFonts">true</property> 
  </configuration>
  <!-- REPORT HEADER -->
  <!-- This band appears once at the beginning of the report. -->    
  <reportheader font-encoding="Identity-H" height="10" fontname="標楷體" fontsize="10" line-height="10" fsbold="true">         
    <label x="0" y="2" width="100%" height="10">項序</label>
    <label x="50" y="2" width="100%" height="10">接收類型</label>  
    <label x="110" y="2" width="100%" height="10">批號</label>
    <label x="150" y="2" width="100%" height="10">供應商</label>  
    <label x="180" y="2" width="100%" height="10">採購單號</label>
    <label x="220" y="2" width="25" height="10" alignment="right">採購數量</label>  
	<label x="240" y="2" width="100%" height="10">幣別</label>
	<label x="280" y="2" width="100%" height="10">暫收單號</label>
    <label x="380" y="2" width="60" height="10">接收日期</label>
    <label x="440" y="2" width="40" height="10" alignment="right">接收數量</label>  
    <label x="480" y="2" width="60" height="10">接收單位</label> 
	<label x="520" y="2" width="100%" height="10">品名/規格</label> 
	<label x="620" y="2" width="60" height="10" alignment="right">執行人員</label>   
    <line color="black" height="0" weight=".25" width="100%" x1="0%" x2="100%" y1="12" y2="12"/>   
  </reportheader>  
  
  <pageheader font-encoding="Identity-H" height="40" fontname="標楷體" line-height="10" fontsize="10" >                 
    <label x="0" y="0" width="100%" height="18" fontsize="18"  alignment="center">陽信長威電子有限公司</label>
    <label x="0" y="20" width="100%" height="12" fontsize="12"  alignment="center">IQC倉庫接收逾3日未檢驗入庫明細表</label>            
    <label x="0" y="25" width="100%" height="100%" fontsize="10"  alignment="left" vertical-alignment="middle">列印日期：</label>               
    <date-field fieldname="report.date" format="yyyy/MM/dd" x="50" y="25" width="100%" height="100%" alignment="left" vertical-alignment="middle"/>                         
    <label x="0" y="40" width="100%" height="100%" fontsize="10"  alignment="left" vertical-alignment="middle">列 印 人：</label>    
  </pageheader>
  
  <pagefooter font-encoding="Identity-H" height="35" fontname="標楷體" fontsize="12" line-height="10" fsbold="false">     
    <rectangle name="sign-box" x="0%" y="0" width="20%" height="20" draw="true" fill="false" />
    <label x="40" y="4" width="100%" height="100%">核准</label>    
    <rectangle name="sign-box" x="20%" y="0" width="20%" height="20" draw="true" fill="false" /> 
    <label x="150" y="4" width="100%" height="100%">覆核</label>                                
    <rectangle name="sign-box" x="40%" y="0" width="20%" height="20" draw="true" fill="false" />
    <label x="250" y="4" width="100%" height="100%">主管(二)</label>
    <rectangle name="sign-box" x="60%" y="0" width="20%" height="20" draw="true" fill="false" />
    <label x="360" y="4" width="100%" height="100%">主管(一)</label>
    <rectangle name="sign-box" x="80%" y="0" width="20%" height="20" draw="true" fill="false" />
    <label x="470" y="4" width="100%" height="100%">請款人</label>
    <rectangle name="sign-box" x="0%" y="20" width="20%" height="40" draw="true" fill="false" />    
    <rectangle name="sign-box" x="20%" y="20" width="20%" height="40" draw="true" fill="false" />                                 
    <rectangle name="sign-box" x="40%" y="20" width="20%" height="40" draw="true" fill="false" />
    <rectangle name="sign-box" x="60%" y="20" width="20%" height="40" draw="true" fill="false" />
    <rectangle name="sign-box" x="80%" y="20" width="20%" height="40" draw="true" fill="false" />
  </pagefooter>

  <items font-encoding="Identity-H" fontname="標楷體" fontsize="10" fsbold="false">
    <!--若資料來源為INFORMIX DB,則欄位名稱要為小寫 -->       
    <number-field fieldname="ROWNUM" x="0" y="2" width="100%" height="10" dynamic="true"/>
    <string-field fieldname="TRANSACTION_TYPE" x="50" y="2" width="100%" height="10" dynamic="true"/>
    <string-field fieldname="VENDOR_LOT_NUM" x="110" y="2" width="100%" height="10" dynamic="true"/>
    <string-field fieldname="VENDOR_NAME" x="150" y="2" width="100%" height="10" dynamic="true"/>   
    <string-field fieldname="SEGMENT1" x="180" y="2" width="100%" height="10" dynamic="true"/>   
    <number-field fieldname="SOURCE_DOC_QUANTITY" x="220" y="2" height="10" width="25" alignment="right" vertical-alignment="middle" dynamic="true" fontsize="8"/>         
	<string-field fieldname="CURRENCY_CODE" x="240" y="2" width="100%" height="10" dynamic="true"/>   
	<string-field fieldname="RECEIPT_NUM" x="280" y="2" width="100%" height="10" dynamic="true"/> 
    <number-field fieldname="TRANSACTION_DATE" x="380" y="2" height="10" width="60" vertical-alignment="middle" dynamic="true" fontsize="8"/>  
    <number-field fieldname="QUANTITY" x="440" y="2" height="10" width="40" alignment="right" vertical-alignment="middle" dynamic="true" fontsize="8"/>
    <string-field fieldname="UOM_CODE" x="480" y="2" height="10" width="60" vertical-alignment="middle" dynamic="true" fontsize="8"/>  
	<string-field fieldname="ITEM_DESCRIPTION" x="520" y="2" width="100%" height="10" dynamic="true"/> 
	<string-field fieldname="USER_NAME" x="620" y="2" width="100%" height="10" dynamic="true"/>
  </items>    

  <functions>
    <property-ref name="report.date"/>
    
    <!-- This will mark the property to be included in the datarow -->    
    <property-ref name="Message"/>        
    
    <!-- The current page number. -->       
    <function name="PageofPages" class="org.jfree.report.function.PageOfPagesFunction"/> 
    <function name="PageNumber" class="org.jfree.report.function.PageFunction"/> 
	
  </functions> 
</report>

